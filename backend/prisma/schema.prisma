generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Workspace {
  id              String   @id @default(cuid()) @map("_id")
  workspaceId     String   @unique
  workspaceName   String
  accessToken     String
  refreshToken    String
  expiresAt       DateTime
  botUserId       String
  authedUserId    String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  joinedChannels  JoinedChannel[]
  scheduledMessages ScheduledMessage[]
}

model JoinedChannel {
  id          String    @id @default(cuid())
  workspaceId String
  channelId   String
  channelName String
  isPrivate   Boolean   @default(false)
  joinedAt    DateTime  @default(now())
  workspace   Workspace @relation(fields: [workspaceId], references: [workspaceId], onDelete: Cascade)

  @@unique([workspaceId, channelId])
}

model ScheduledMessage {
  id          String    @id @default(cuid())
  workspaceId String
  channelId   String
  channelName String
  message     String
  scheduledAt DateTime
  sentAt      DateTime?
  status      String    @default("pending") // pending, sending, sent, failed
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  workspace   Workspace @relation(fields: [workspaceId], references: [workspaceId], onDelete: Cascade)

  @@index([workspaceId, scheduledAt])
  @@index([status, scheduledAt])
}


