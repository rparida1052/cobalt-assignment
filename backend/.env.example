# Slack OAuth Configuration
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here

# Redirect URI Configuration
# For local development:
SLACK_REDIRECT_URI=http://localhost:8000/auth/slack/callback

# For ngrok tunneling (replace with your actual ngrok URL):
# SLACK_REDIRECT_URI=https://your-ngrok-url.ngrok-free.app/auth/slack/callback

# Server Configuration
PORT=8000

# Frontend URL Configuration
# For local development:
FRONTEND_URL=http://localhost:5173

# For ngrok tunneling (replace with your actual ngrok URL):
# FRONTEND_URL=https://your-ngrok-url.ngrok-free.app

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/slack_oauth_db"

# Note: If using ngrok, make sure to:
# 1. Update both SLACK_REDIRECT_URI and FRONTEND_URL with your ngrok URL
# 2. Use ngrok with custom domain or paid plan to avoid browser warnings
# 3. Or use localhost for development instead of ngrok
